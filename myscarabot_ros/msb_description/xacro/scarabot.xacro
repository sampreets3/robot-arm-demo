<robot name="scara_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">
 
  <material name="black">
    <color rgba="0 0 0 1.0" />
  </material>
 
  <material name="blue">
    <color rgba="0 0 1 1.0" />
  </material>
 
  <material name="white">
    <color rgba="1 1 1 1.0" />
  </material>
 
  <link name="base_footprint"/>
 
  <joint name="world" type="fixed">
    <parent link="base_footprint"/>
    <child link="base"/>
    <origin rpy="0 0 0" xyz="0 0 0.1"/>
  </joint>
 
  <link name="base">
    <visual>
        <geometry>
          <cylinder radius="0.2" length="0.2" />
        </geometry>
        <origin rpy="0 0 0" xyz="0 0 0" />
        <material name="blue" />
    </visual>  
    <visual>
      <geometry>
        <cylinder radius="0.1" length="0.4" />
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.2" />
      <material name="blue" />
    </visual>
  </link>

  <joint name="joint_1" type="revolute">
    <parent link="base" />
    <child link="link_1" />
    <limit lower="-2.356" upper="2.356" effort="10.0" velocity="1.0"/>
    <origin rpy="0 0 0" xyz="0 0 0.3" />
    <axis xyz="0 0 1" />
  </joint>

  <link name="link_1">
    <visual>
      <geometry>
        <box size="0.4 0.25 0.15" />
      </geometry>
      <origin rpy="0 0 0" xyz="0.2 0 0" />
      <material name="white"/>
    </visual>
    <visual>
      <geometry>
        <cylinder radius="0.125" length="0.15" />
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0" />
      <material name="white"/>
    </visual>
    <visual>
      <geometry>
        <cylinder radius="0.125" length="0.15" />
      </geometry>
      <origin rpy="0 0 0" xyz="0.4 0 0" />
      <material name="white"/>
    </visual>
  </link>

  <joint name="joint_2" type="revolute">
    <parent link="link_1" />
    <child link="link_2" />
    <origin rpy="0 0 0" xyz="0.4 0 0.25" />
    <limit lower="-2.356" upper="2.356" effort="10.0" velocity="1.0"/>
    <axis xyz="0 0 1" />
  </joint>

  <link name="link_2">
    <visual>
      <geometry>
        <box size="0.4 0.25 0.35" />
      </geometry>
      <origin rpy="0 0 0" xyz="0.2 0 0" />
      <material name="white"/>
    </visual>
    <visual>
      <geometry>
        <cylinder radius="0.125" length="0.35" />
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0" />
      <material name="white"/>
    </visual>
    <visual>
      <geometry>
        <cylinder radius="0.125" length="0.35" />
      </geometry>
      <origin rpy="0 0 0" xyz="0.4 0 0" />
      <material name="white"/>
    </visual>
  </link>

  <joint name="joint_3" type="prismatic">
    <parent link="link_2" />
    <child link="link_3" />
    <origin rpy="0 0 0" xyz="0.4 0 -0.05" />
    <limit lower="0.0" upper="0.4" effort="10.0" velocity="1.0"/>
    <axis xyz="0 0 -1" />
  </joint>

  <link name="link_3">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.6" />
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.1" />
      <material name="black" />
    </visual>
    <visual>
      <geometry>
        <cylinder radius="0.075" length="0.05" />
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 -0.175" />
      <material name="black" />
    </visual>
  </link>

  <ros2_control name="myscarabot" type="system">
    <hardware>
      <plugin>test_system</plugin>
    </hardware>
  </ros2_control>
</robot>
